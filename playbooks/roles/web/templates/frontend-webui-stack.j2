version: "3.7"

services:
  dashy:
    image: lissy93/dashy
    hostname: "{{dashboard_app_name}}"
    networks:
      - {{traefik_network_name}}
    volumes:
      - /vagrant/data/{{dashboard_app_name}}/conf.yml:/app/public/conf.yml:Z
    ports:
      - 8081:80
    # Set any environmental variables
    environment:
      - NODE_ENV=production
    deploy:
      labels:
          - "traefik.enable=true"
          - "traefik.http.routers.dashy-http.rule=Host(`{{dashboard_app_name}}.{{app_domain_name}}`)"
          - "traefik.http.routers.dashy-http.entrypoints={{traefik_network_name}}"
          - "traefik.http.routers.dashy-http.service=dashy-http-svc"
          - "traefik.http.services.dashy-http-svc.loadbalancer.server.port={{dashy_web_port}}"
          - "traefik.http.services.dashy-http-svc.loadbalancer.passhostheader=true"
          - "diun.enable=true"
      mode: replicated
      replicas: 1
      restart_policy:
        condition: on-failure
      placement:
        constraints:
           - "node.role==manager"

  uptime-kuma:
    image: louislam/uptime-kuma:1
    hostname: "{{uptime_kuma_app_name}}"
    networks:
      - {{traefik_network_name}}
    volumes:
      - /vagrant/data/uptime_kuma:/app/data
    deploy:
      labels:
          - "diun.enable=true"
          - "traefik.enable=true"
          - "traefik.http.routers.uptime_kuma-http.rule=Host(`{{uptime_kuma_app_name}}.{{app_domain_name}}`)"
          - "traefik.http.routers.uptime_kuma-http.entrypoints={{traefik_network_name}}"
          - "traefik.http.routers.uptime_kuma-http.service=uptime_kuma-http-svc"
          - "traefik.http.services.uptime_kuma-http-svc.loadbalancer.server.port={{uptime_kuma_app_port}}"
          - "traefik.http.services.uptime_kuma-http-svc.loadbalancer.passhostheader=true"
      mode: replicated
      replicas: 1
      restart_policy:
        condition: on-failure
      placement:
        constraints:
           - "node.role==manager"


networks:
  {{traefik_network_name}}:
    external: true
    name: {{traefik_network_name}}

volumes:
  dashy_config:
